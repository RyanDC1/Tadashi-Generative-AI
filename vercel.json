{
    "version": 2,
    "buildCommand": "pnpm build",
    "builds": [
      {
        "src": "./server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "./src/**",
        "use": "@vercel/static"
      }
    ],
  
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server/index.js"
      }
    ]
  }